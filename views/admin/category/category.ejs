<%- include("../../layout/admin-navbar") -%>


<% if(editSuccess.length> 0){ %>
    <script>
        Swal.fire(
            'تم تعديل معلومات القسم',
            '',
            'success'
        )
    </script>
    <%} %>
    <% if(message.length> 0){ %>
        <script>
            Swal.fire(
                'يوجد قسم بهذا الاسم مسبقا',
                '',
                'error'
            )
        </script>
        <%} %>

            <% if(deleteAlert.length> 0){ %>
                <script>
                    Swal.fire(
                        'تم حذف القسم بنجاح',
                        '',
                        'success'
                    )
                </script>
                <%} %>

                

                    <div class="container category">
                        <p>الاقسام الرئيسية</p>
                            <button id="open" class="new" onclick="addCat()"><svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-plus" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <line x1="12" y1="5" x2="12" y2="19" />
                                <line x1="5" y1="12" x2="19" y2="12" />
                              </svg></button>

                              <button class="close" id="close" onclick="closeCat()"><svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-x" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <line x1="18" y1="6" x2="6" y2="18" />
                                <line x1="6" y1="6" x2="18" y2="18" />
                              </svg></button>
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">اسم القسم</th>
                                    <th scope="col">تاريخ الاضافة</th>
                                    <th scope="col">تعديل</th>
                                    <th scope="col">حذف</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr id="add-cat">
                                    <form action="/admin/category/main" method="post">
                                        <td colspan="2"><input name="name" type="text" placeholder="اسم القسم"></td>
                                        <td><button class="add"><svg xmlns="http://www.w3.org/2000/svg"
                                                    class="icon icon-tabler icon-tabler-plus" width="28" height="28"
                                                    viewBox="0 0 24 24" stroke-width="2" stroke="#ffffff" fill="none"
                                                    stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                    <line x1="12" y1="5" x2="12" y2="19" />
                                                    <line x1="5" y1="12" x2="19" y2="12" />
                                                </svg></button></td>
                                        <td></td>
                                        <td></td>
                                    </form>
                                </tr>
                                <% mainCategory.forEach(data=> {%>
                                    <tr>
                                        <td>
                                            <%= data.name%>
                                        </td>
                                        <td>
                                            <%= data.Date%>
                                        </td>
                                        <td><button class="edit" onclick="window.location.href='/admin/category/main/edit/<%= data.id%>'"><svg xmlns="http://www.w3.org/2000/svg"
                                                    class="icon icon-tabler icon-tabler-pencil" width="20" height="20"
                                                    viewBox="0 0 24 24" stroke-width="2" stroke="#ffffff" fill="none"
                                                    stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                    <path d="M4 20h4l10.5 -10.5a1.5 1.5 0 0 0 -4 -4l-10.5 10.5v4" />
                                                    <line x1="13.5" y1="6.5" x2="17.5" y2="10.5" />
                                                </svg></button></td>
                                        <td>
                                            <form action="/admin/category/main/delete/<%=data.id%>?_method=DELETE"
                                                method="POST">
                                                <button class="delete"><svg xmlns="http://www.w3.org/2000/svg"
                                                        class="icon icon-tabler icon-tabler-trash" width="20"
                                                        height="20" viewBox="0 0 24 24" stroke-width="2"
                                                        stroke="#000000" fill="none" stroke-linecap="round"
                                                        stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                        <line x1="4" y1="7" x2="20" y2="7" />
                                                        <line x1="10" y1="11" x2="10" y2="17" />
                                                        <line x1="14" y1="11" x2="14" y2="17" />
                                                        <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                                                        <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                                                    </svg></button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <script>
                        function addCat() {
                            document.getElementById("add-cat").style.display = "contents";
                            document.getElementById("open").style.display = "none";
                            document.getElementById("close").style.display = "inline";
                        }

                        function closeCat() {
                            document.getElementById("add-cat").style.display = "none";
                            document.getElementById("open").style.display = "inline";
                            document.getElementById("close").style.display = "none";
                        }
                    </script>

                    <%- include("../../layout/footer") -%>