<%- include("../../layout/admin-navbar") -%>
<% if(del.length > 0){%>
    <script>
        Swal.fire(
            'تم حذف الماركة',
            '',
            'success'
        )
    </script>
<%} %>
<div class="brand">
    <p >الماركات</p>
    <center>
    <button onclick="window.location.href='/admin/brand/add'"><svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-plus" width="32" height="32" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <line x1="12" y1="5" x2="12" y2="19" />
        <line x1="5" y1="12" x2="19" y2="12" />
      </svg></button>
    </center>
    <table class="container table table-striped table-hover">
        <thead>
            <tr>
                <th>اسم البراند</th>
                <th>تعديل</th>
                <th>حذف</th>
            </tr>
        </thead>
        <tbody>
            <% brand.forEach(data => {%>
                <tr>
                <td><%= data.name%></td>
                <td><button class="edit"
                    onclick="window.location.href='/admin/brand/edit/<%= data.id%>'"><svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="icon icon-tabler icon-tabler-edit" width="28"
                        height="28" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="#ffffff" fill="none" stroke-linecap="round"
                        stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path
                            d="M9 7h-3a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-3" />
                        <path d="M9 15h3l8.5 -8.5a1.5 1.5 0 0 0 -3 -3l-8.5 8.5v3" />
                        <line x1="16" y1="5" x2="19" y2="8" />
                    </svg></button></td>
            <td>

           
                <form action="/admin/brand/delete/<%= data.id%>?_method=DELETE"
                    method="post">
                    <button class="delete"><svg xmlns="http://www.w3.org/2000/svg"
                            class="icon icon-tabler icon-tabler-trash" width="28"
                            height="28" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="#000000" fill="none" stroke-linecap="round"
                            stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <line x1="4" y1="7" x2="20" y2="7" />
                            <line x1="10" y1="11" x2="10" y2="17" />
                            <line x1="14" y1="11" x2="14" y2="17" />
                            <path
                                d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                            <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                        </svg></button>
                </form>
            </td> </tr>
            <%}) %>
        </tbody>
    </table>
</div>

<%- include("../../layout/footer") -%>